extends layout2.pug 

block title 
    title #{name}

block script 
    script(src="../static/scripts/artist.js")
 
block style 
    include ../static/styles/artist.css

block content 
 section
  #container 
   #artistinfo
    img#artistimg(src="../static/imgs/icons/def_artist_img.png", alt="")
    #artistname
     |#{name}
    #pic_url 
     |#{url}
    #right
     img#shuffle(src="../static/imgs/icons/no-shuffle.png", alt="", onclick='shufflePlay(this)')
     #numtracks 
      |00 tracks
     #favstatus 
      img#favArt(src="../static/imgs/icons/notfav.png", alt="", onclick="favStatusChange(this)")
   hr
   ul#tracks
   
  #options
   #selected_song 
    |
   |#{name}
   ul 
    li.op(onclick='add(this)')
     |Add to Favorites
    li.op(onclick='add(this)')
     |Add to Playlist 1
    li.op(onclick='add(this)')
     |Add to Playlist 2
    li.op(onclick='add(this)')
     |Add to Playlist 3

  #note 
   | You can request addition of songs for this artist through&nbsp
   a(href="/feedback") feedback 

  #player
   p#current_song
    |
   #controls 
    img#prev.ctrl(src="../static/imgs/icons/next.png", alt="next", onclick="prev()")
    audio#audio(controls='', autoplay=False, controlsList="nodownload", onended="next()")
     source#audiourl(src="" type="audio/mpeg") 
    img#next.ctrl(src="../static/imgs/icons/next.png", alt="next", onclick="next()")
   
   img#collapse(src="../static/imgs/icons/collapse.png", alt="", onclick='collapse(this)')
    